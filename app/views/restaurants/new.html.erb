<h1>Create a Restaurant</h1>

<ul>
  <%= form_for(@restaurant) do |f| %>
    <%= f.label :name %> <br>
    <%= f.text_area :name %> <br>


    <%= f.label :address %> <br>
    <%= f.text_area :address %> <br>


    <%= f.label :category %> <br>
    <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %> <br>

    <%= f.submit 'Add a restaurant' %>
  <% end %>
</ul>
